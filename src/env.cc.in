/// @file env.cc.in
/// Implementation of Env class.
/// The variables are filled by CMake.
#include "env.h"

namespace scram {

std::string Env::instdir_ = "@scram_install_dir@";

const std::string Env::config_schema() {
  return Env::instdir_ + "/share/scram/config.rng";
}

const std::string Env::input_schema() {
  return Env::instdir_ + "/share/scram/input.rng";
}

const std::string Env::report_schema() {
  return Env::instdir_ + "/share/scram/report_layer.rng";
}

}  // namespace scram
